<div class="row">
<div class="col-md-6 col-md-offset-3 center">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
 <%= render 'shared/devisemes' %>

  <div class="form-group">
    <%= f.email_field :email, :class => 'form-control', :placeholder => 'Enter your email address', autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => 'btn btn-danger' %>
  </div>
<% end %>

<br>

<%= link_to "Sign In", new_user_session_path %>&nbsp;
<%= link_to "Sign Up", new_user_registration_path %>
</div>
</div>

